/* report.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}

/* 报告标题 */
.report-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 设备信息 */
.device-info {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  color: #666;
  width: 140rpx;
}

.info-value {
  flex: 1;
  color: #333;
  font-weight: 500;
}

/* 综合评分 */
.score-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.score-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.score-icon {
  font-size: 40rpx;
  margin-right: 15rpx;
}

.score-label {
  font-size: 30rpx;
  color: #666;
  margin-right: 15rpx;
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
}

.score-bar-container {
  display: flex;
  align-items: center;
}

.score-bar {
  flex: 1;
  height: 20rpx;
  background-color: #e0e0e0;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 20rpx;
}

.score-bar-fill {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  border-radius: 10rpx;
  transition: width 0.3s;
}

.score-percent {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
  min-width: 60rpx;
}

/* 各项指标 */
.indicators-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.indicators-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.indicator-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.indicator-bullet {
  color: #667eea;
  margin-right: 15rpx;
  font-weight: bold;
}

.indicator-name {
  color: #666;
  margin-right: 10rpx;
}

.indicator-value {
  flex: 1;
  font-weight: 500;
}

.indicator-value.excellent {
  color: #2ed573;
}

.indicator-value.good {
  color: #667eea;
}

.indicator-value.normal {
  color: #ffa502;
}

.indicator-value.bad {
  color: #ff4757;
}

/* 专业建议 */
.suggestions-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.suggestions-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
}

.suggestion-number {
  font-size: 28rpx;
  color: #667eea;
  font-weight: bold;
  margin-right: 15rpx;
  min-width: 40rpx;
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  border-radius: 16rpx;
  font-size: 30rpx;
  padding: 24rpx;
  border: none;
}

.share-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.save-btn {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

/* 插屏广告 */
.interstitial-ad {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.ad-overlay {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.ad-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
}

.ad-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #e0e0e0;
}

.ad-label {
  font-size: 24rpx;
  color: #999;
}

.ad-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.ad-body {
  padding: 60rpx 40rpx;
  text-align: center;
}

.ad-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.ad-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.ad-actions {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.ad-action-btn {
  flex: 1;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 26rpx;
  padding: 20rpx;
  border: none;
}

.ad-close-btn {
  width: 100%;
  background-color: #f5f5f5;
  color: #666;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}

/* 相关推荐 */
.recommendations-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.recommendations-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.recommendation-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.recommendation-item:active {
  background-color: #eeeeee;
  transform: scale(0.98);
}

.recommendation-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.recommendation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.recommendation-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.recommendation-desc {
  font-size: 24rpx;
  color: #999;
}

.recommendation-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}
