/* oled-detection.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 导航栏 */
.navbar {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.nav-back {
  margin-right: 20rpx;
}

.nav-back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 重要提示 */
.warning-box {
  display: flex;
  align-items: flex-start;
  background: linear-gradient(135deg, #fff9e6 0%, #ffeaa7 100%);
  padding: 30rpx 40rpx;
  margin: 30rpx 40rpx;
  border-radius: 16rpx;
  border-left: 6rpx solid #ffa502;
}

.warning-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.warning-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.warning-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.warning-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 测试内容区域 */
.test-content-area {
  margin: 0 40rpx 30rpx;
}

.test-display {
  min-height: 600rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.test-info {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 40rpx;
  border-radius: 16rpx;
  min-width: 400rpx;
}

.test-step-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.test-step-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.test-tip {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 纯色检测 */
.color-test {
  background-color: #FF0000;
}

/* 残影测试 */
.burn-in-test {
  background-color: #fff;
}

.checkerboard-pattern {
  width: 100%;
  height: 100%;
  background-image: 
    linear-gradient(45deg, #000 25%, transparent 25%),
    linear-gradient(-45deg, #000 25%, transparent 25%),
    linear-gradient(45deg, transparent 75%, #000 75%),
    linear-gradient(-45deg, transparent 75%, #000 75%);
  background-size: 40rpx 40rpx;
  background-position: 0 0, 0 20rpx, 20rpx -20rpx, -20rpx 0rpx;
}

.black-pattern {
  width: 100%;
  height: 100%;
  background-color: #000;
}

/* UI元素模拟 */
.ui-simulation {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 40rpx;
  background-color: #000;
  color: #fff;
}

.status-time {
  font-size: 28rpx;
}

.status-icons {
  display: flex;
  gap: 15rpx;
  font-size: 24rpx;
}

.ui-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.nav-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #000;
  color: #fff;
  font-size: 32rpx;
}

/* 灰度渐变 */
.grayscale-test {
  background: linear-gradient(to bottom, #000 0%, #fff 100%);
}

.grayscale-gradient {
  width: 100%;
  height: 100%;
  background: linear-gradient(to bottom, #000 0%, #333 25%, #666 50%, #999 75%, #fff 100%);
}

/* 文字残影 */
.text-burn-test {
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.scrolling-text {
  width: 100%;
  height: 400rpx;
  overflow: hidden;
  position: relative;
}

.scroll-text-item {
  display: block;
  font-size: 48rpx;
  color: #333;
  margin-bottom: 30rpx;
  white-space: nowrap;
  animation: scroll 10s linear infinite;
}

@keyframes scroll {
  0% {
    transform: translateY(0);
  }
  100% {
    transform: translateY(-100%);
  }
}

/* 倒计时 */
.countdown-box {
  text-align: center;
  padding: 20rpx;
  margin: 0 40rpx 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.countdown-text {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 操作按钮 */
.actions {
  padding: 0 40rpx 30rpx;
  display: flex;
  gap: 20rpx;
}

.btn {
  flex: 1;
  border-radius: 16rpx;
  font-size: 30rpx;
  padding: 24rpx;
  border: none;
}

.btn-issue {
  background-color: #ff4757;
  color: #fff;
}

.btn-normal {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
}

/* 插屏广告 */
.interstitial-ad {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999;
}

.ad-overlay {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.ad-content {
  background-color: #fff;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
}

.ad-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #e0e0e0;
}

.ad-label {
  font-size: 24rpx;
  color: #999;
}

.ad-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.ad-body {
  padding: 60rpx 40rpx;
  text-align: center;
}

.ad-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.ad-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.ad-close-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}

/* 小贴士 */
.tips-section {
  margin: 0 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tips-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.tips-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.tips-question {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.tips-btn {
  width: 100%;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: #fff;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}
