/* screen-type.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}

/* 区块样式 */
.section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.section-title-group {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 品牌列表 */
.brand-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.brand-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.brand-item:active {
  background-color: #eeeeee;
  transform: scale(0.98);
}

.brand-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.brand-name {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.brand-arrow {
  font-size: 28rpx;
  color: #ccc;
}

/* 技术类型列表 */
.tech-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tech-item {
  background-color: #f8f8f8;
  border-radius: 16rpx;
  padding: 30rpx;
  border-left: 6rpx solid #667eea;
  transition: all 0.2s;
}

.tech-item:active {
  background-color: #eeeeee;
  transform: scale(0.98);
}

.tech-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.tech-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.tech-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tech-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.tech-desc {
  font-size: 26rpx;
  color: #666;
}

.tech-detail {
  padding-left: 56rpx;
}

.tech-detail-text {
  font-size: 26rpx;
  color: #999;
}

/* 广告区域 */
.ad-section {
  background: linear-gradient(135deg, #fff9e6 0%, #ffeaa7 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 30rpx;
  border: 2rpx solid #ffa502;
  box-shadow: 0 4rpx 20rpx rgba(255, 165, 2, 0.2);
}

.ad-header {
  text-align: center;
  margin-bottom: 30rpx;
}

.ad-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.ad-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ad-question {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.ad-actions {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.ad-btn {
  flex: 1;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 24rpx;
  border: none;
}

.skip-btn {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

.watch-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
}
