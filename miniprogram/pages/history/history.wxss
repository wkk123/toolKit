/* history.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}

/* 标题 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 通用区块样式 */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 我的设备 */
.devices-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.devices-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.device-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.device-bullet {
  color: #667eea;
  margin-right: 15rpx;
  font-weight: bold;
}

.device-name {
  color: #333;
}

/* 最近检测 */
.recent-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-recent {
  text-align: center;
  padding: 60rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.recent-list {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.recent-item {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.recent-item:active {
  background-color: #eeeeee;
  transform: scale(0.98);
}

.recent-date {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
  min-width: 100rpx;
}

.recent-score {
  flex: 1;
  font-size: 30rpx;
  font-weight: bold;
  color: #667eea;
}

.recent-arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 健康趋势 */
.trend-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-chart {
  text-align: center;
  padding: 60rpx 0;
}

.chart-container {
  position: relative;
}

.chart-area {
  padding: 20rpx 0;
}

.chart-bars {
  display: flex;
  align-items: flex-end;
  justify-content: space-around;
  height: 300rpx;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.chart-bar {
  flex: 1;
  margin: 0 5rpx;
  background: linear-gradient(to top, #667eea 0%, #764ba2 100%);
  border-radius: 8rpx 8rpx 0 0;
  min-height: 20rpx;
  position: relative;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding-top: 10rpx;
}

.bar-value {
  font-size: 20rpx;
  color: #fff;
  font-weight: bold;
}

.chart-labels {
  display: flex;
  justify-content: space-around;
  padding: 0 10rpx;
}

.chart-label {
  font-size: 22rpx;
  color: #999;
  flex: 1;
  text-align: center;
}

.chart-ad {
  position: absolute;
  top: 0;
  right: 0;
  background-color: rgba(255, 165, 2, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  border: 1rpx dashed #ffa502;
}

.chart-ad .ad-label {
  font-size: 20rpx;
  color: #ffa502;
}

/* 发现异常 */
.alert-section {
  background: linear-gradient(135deg, #fff9e6 0%, #ffeaa7 100%);
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  border-left: 6rpx solid #ffa502;
  box-shadow: 0 2rpx 10rpx rgba(255, 165, 2, 0.2);
}

.alert-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.alert-icon {
  font-size: 32rpx;
  margin-right: 10rpx;
}

.alert-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.alert-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 25rpx;
}

.alert-actions {
  display: flex;
  gap: 20rpx;
}

.alert-btn {
  flex: 1;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: none;
}

.re-test-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.suggestion-btn {
  background-color: #fff;
  color: #666;
  border: 2rpx solid #e0e0e0;
}

/* 横幅广告 */
.banner-ad {
  background-color: #fff9e6;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border: 2rpx dashed #ffa502;
  position: relative;
}

.banner-ad .ad-label {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 20rpx;
  color: #999;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.banner-ad .ad-content {
  padding-top: 10rpx;
  text-align: center;
}

.banner-ad .ad-text {
  font-size: 26rpx;
  color: #666;
}

/* 高级功能 */
.advanced-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.advanced-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.advanced-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.2s;
  position: relative;
}

.advanced-item:active {
  background-color: #eeeeee;
  transform: scale(0.98);
}

.advanced-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
}

.advanced-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.advanced-badge {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 15rpx;
}

.advanced-arrow {
  font-size: 28rpx;
  color: #ccc;
}
