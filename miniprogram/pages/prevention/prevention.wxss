/* prevention.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 40rpx;
}

/* 标题 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

/* 屏幕类型选择 */
.type-selector {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.selector-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.selector-buttons {
  display: flex;
  gap: 20rpx;
}

.selector-btn {
  flex: 1;
  border-radius: 16rpx;
  font-size: 28rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  background-color: #fff;
  color: #666;
}

.selector-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-color: transparent;
}

/* 指南区块 */
.guide-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.oled-section {
  border-left: 6rpx solid #ff6b6b;
}

.lcd-section {
  border-left: 6rpx solid #4facfe;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 15rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tip-item {
  display: flex;
  align-items: flex-start;
}

.tip-bullet {
  font-size: 28rpx;
  color: #667eea;
  margin-right: 15rpx;
  font-weight: bold;
  flex-shrink: 0;
}

.tip-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 实用工具 */
.tools-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.tools-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.tool-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  transition: all 0.2s;
}

.tool-item:active {
  background-color: #eeeeee;
  transform: scale(0.98);
}

.tool-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.tool-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tool-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.tool-desc {
  font-size: 24rpx;
  color: #999;
}

.tool-arrow {
  font-size: 28rpx;
  color: #ccc;
  margin-left: 20rpx;
}

/* 信息流广告 */
.banner-ad {
  background-color: #fff9e6;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border: 2rpx dashed #ffa502;
  position: relative;
}

.ad-label {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 20rpx;
  color: #999;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.ad-content {
  padding-top: 10rpx;
  text-align: center;
}

.ad-text {
  font-size: 26rpx;
  color: #666;
}

/* 升级专业版 */
.pro-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.pro-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.pro-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.pro-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.pro-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 8rpx;
}

.pro-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.pro-upgrade-btn {
  width: 100%;
  background-color: #fff;
  color: #667eea;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  padding: 24rpx;
  border: none;
}

.pro-upgrade-btn:active {
  background-color: #f8f8f8;
}
