/* lcd-detection.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 导航栏 */
.navbar {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.nav-back {
  margin-right: 20rpx;
}

.nav-back-icon {
  font-size: 36rpx;
  color: #333;
}

.nav-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 环境建议 */
.environment-tip {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx 40rpx;
  margin: 30rpx 40rpx;
  border-radius: 16rpx;
  color: #fff;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.tip-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tip-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.tip-text {
  font-size: 26rpx;
  opacity: 0.9;
}

/* 测试内容区域 */
.test-content-area {
  margin: 0 40rpx 30rpx;
}

.test-display {
  min-height: 600rpx;
  border-radius: 20rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.test-info {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 40rpx;
  border-radius: 16rpx;
  min-width: 400rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.test-step-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.test-step-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
}

.test-instruction {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.test-tip {
  display: block;
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
}

/* 背光均匀度检测 */
.backlight-test {
  background-color: #808080;
}

/* 漏光检测 */
.light-bleed-test {
  background-color: #000;
