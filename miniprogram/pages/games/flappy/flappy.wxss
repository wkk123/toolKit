/* flappy.wxss */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #87CEEB 0%, #E0F6FF 100%);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-header {
  width: 100%;
  max-width: 750rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.score-info {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.score-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #fa709a;
}

.game-controls {
  display: flex;
  justify-content: center;
}

.control-btn {
  padding: 16rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.3);
}

.start-btn {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.game-area {
  position: relative;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.2);
}

.game-canvas {
  display: block;
  border-radius: 10rpx;
  background: transparent;
}

.game-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(5rpx);
}

.overlay-content {
  text-align: center;
}

.overlay-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
}

.overlay-desc {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.game-tips {
  width: 100%;
  max-width: 750rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}
