.container {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #ff9a9e 0%, #fecfef 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-top: 40rpx;
  text-align: center;
  color: #ffffff;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  opacity: 0.9;
}

.info-bar {
  margin-top: 32rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  gap: 40rpx;
  color: #ffffff;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 24rpx;
  opacity: 0.9;
}

.value {
  font-size: 32rpx;
  font-weight: 600;
}

.board {
  margin-top: 48rpx;
  width: 600rpx;
  height: 600rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 24rpx;
  padding: 16rpx;
  display: grid;
  gap: 10rpx;
  box-sizing: border-box;
  box-shadow: 0 16rpx 40rpx rgba(0, 0, 0, 0.15);
}

.tile {
  border-radius: 18rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #ff6b6b;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
  transition: all 0.2s ease;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.tile:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.tile-text {
  pointer-events: none;
}

.tile.empty {
  background: transparent;
  box-shadow: none;
}

.tile.completed {
  background: #4cd964;
  color: #ffffff;
}

.buttons {
  margin-top: 40rpx;
}

.btn {
  padding: 0 60rpx;
  border-radius: 999rpx;
  background: #ffffff;
  color: #ff6b6b;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

.tips {
  margin-top: 32rpx;
  font-size: 24rpx;
  color: #ffffff;
  opacity: 0.9;
  text-align: center;
  padding: 0 20rpx;
}

