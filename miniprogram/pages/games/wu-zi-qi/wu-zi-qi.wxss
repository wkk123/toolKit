.container {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  color: #ffffff;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

.info-bar {
  display: flex;
  justify-content: space-around;
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.info-item {
  flex: 1;
  display: flex;
  justify-content: center;
}

.player-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 15rpx 30rpx;
  border-radius: 15rpx;
  transition: all 0.3s;
  opacity: 0.6;
}

.player-info.active {
  background: rgba(255, 255, 255, 0.3);
  opacity: 1;
  transform: scale(1.1);
}

.piece-preview {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.5);
}

.piece-preview.black {
  background: #1a1a1a;
}

.piece-preview.white {
  background: #ffffff;
}

.player-name {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.piece-count {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.board-container {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.board {
  background: #d4a574;
  border: 4rpx solid #8b6f47;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.3);
}

.row {
  display: flex;
}

.cell {
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #8b6f47;
  background: #d4a574;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

.cell::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 2rpx;
  height: 2rpx;
  background: #8b6f47;
  border-radius: 50%;
}

.piece {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 2rpx solid rgba(0, 0, 0, 0.2);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.cell.black .piece {
  background: linear-gradient(135deg, #2c2c2c 0%, #1a1a1a 100%);
}

.cell.white .piece {
  background: linear-gradient(135deg, #ffffff 0%, #f5f5f5 100%);
}

.game-status {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 100;
}

.status-overlay {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-content {
  background: #ffffff;
  padding: 60rpx 80rpx;
  border-radius: 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.status-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #667eea;
  text-align: center;
}

.buttons {
  width: 100%;
  max-width: 600rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
}

.btn {
  width: 70%;
  max-width: 360rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.2);
}

.btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

.tips {
  width: 100%;
  max-width: 600rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 15rpx;
  backdrop-filter: blur(10rpx);
}

.tips text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}
