.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #feca57 0%, #ff9a56 100%);
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-header {
  width: 100%;
  max-width: 750rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.info-section {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.info-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #feca57;
}

.game-controls {
  display: flex;
  justify-content: center;
}

.control-btn {
  padding: 16rpx 60rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  color: #fff;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.3);
}

.start-btn {
  background: linear-gradient(135deg, #feca57 0%, #ff9a56 100%);
}

.game-area {
  width: 100%;
  max-width: 750rpx;
  margin-bottom: 30rpx;
}

.cards-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

.card {
  perspective: 1000px;
  cursor: pointer;
  flex-shrink: 0;
}

.card-inner {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.6s;
  transform-style: preserve-3d;
}

.card.flipped .card-inner {
  transform: rotateY(180deg);
}

.card.matched {
  opacity: 0.6;
  pointer-events: none;
}

.card:active {
  transform: scale(0.95);
}

.card-front,
.card-back {
  position: absolute;
  width: 100%;
  height: 100%;
  backface-visibility: hidden;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.2);
}

.card-front {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transform: rotateY(0deg);
}

.card-back {
  background: linear-gradient(135deg, #feca57 0%, #ff9a56 100%);
  transform: rotateY(180deg);
}

.card-icon {
  font-size: 60rpx;
  color: #fff;
}

.card-icon-large {
  font-size: 56rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.game-tips {
  width: 100%;
  max-width: 750rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}
